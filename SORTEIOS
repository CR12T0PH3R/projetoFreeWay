import random

# Inicializar uma lista de contagem para cada número de 1 a 60
contagem = [0] * 60

# Realizar o sorteio 1 milhão de vezes
for i in range(1000000):
    numero_sorteado = random.randint(1, 60)
    contagem[numero_sorteado - 1] += 1

# Encontrar os 6 números mais frequentes
mais_frequentes = sorted(range(len(contagem)), key=lambda i: contagem[i], reverse=True)[:6]

# Mostrar os 6 números mais frequentes
print("Os 6 números mais frequentes foram:")
for numero in mais_frequentes:
    print(numero + 1, f"({contagem[numero]} vezes)")

